@model IEnumerable<Escolar32.Models.Bairro>

<div class="container">

    <div class="row">
        <div class="col-md-6">
            <img class="img-fluid"src="/Imagens/area.png"/>
        </div>
        <div class="col-md-6">
            <h2>Bairros atendidos </h2>
            <hr />
            @foreach (var item in Model){
            <ul class="texto">

                <li>@Html.DisplayFor(modelItem => item.BairroNome)</li>
                
            </ul>
            }
            <div>
                <a asp-area="" asp-controller="Home" asp-action="Home">Voltar</a>
            </div>
        </div>
    </div>
    
    
</div>
